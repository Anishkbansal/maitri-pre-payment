# Server Configuration
PORT=3000
NODE_ENV=production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password
EMAIL_PASS=your-email-app-password

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your-bcrypt-hashed-password
# Generate with: node scripts/encrypt-password.js

# Admin Emails (comma-separated list of authorized admin email addresses)
ADMIN_EMAILS=admin1@example.com, admin2@example.com

# Gift Card Configuration
GIFT_CARD_EXPIRY_MONTHS=12 

# Database paths (relative to server root)
GIFTCARDS_DB_PATH=giftcards_db.json
PRODUCTS_DB_PATH=products_db.json

# Application URLs - Update these for production
CLIENT_URL=https://your-domain.com
API_URL=https://your-domain.com/api

# JWT Secret for authentication (generate a strong random string)
JWT_SECRET=generate-a-strong-random-string

# Stripe Configuration - Update with your live keys for production
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Klarna Configuration
VITE_ENABLE_KLARNA=true
VITE_KLARNA_MIN_AMOUNT=300

# Payment Configuration (for Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Klarna Configuration (optional)
KLARNA_USERNAME=your_klarna_username
KLARNA_PASSWORD=your_klarna_password 